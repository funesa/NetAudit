<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Product Id="*" 
           Name="NetAudit Enterprise" 
           Language="1033" 
           Version="2026.1.14.0" 
           Manufacturer="FUNESA" 
           UpgradeCode="12345678-1234-1234-1234-123456789012">
    
    <Package InstallerVersion="200" Compressed="yes" InstallScope="perMachine" />
    
    <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />
    
    <MediaTemplate EmbedCab="yes" />

    <Feature Id="ProductFeature" Title="NetAudit Enterprise" Level="1">
      <ComponentGroupRef Id="ProductComponents" />
      <ComponentRef Id="ApplicationShortcut" />
      <ComponentRef Id="ApplicationShortcutDesktop" />
    </Feature>
    
    <!-- UI -->
    <UIRef Id="WixUI_Minimal" />
    <WixVariable Id="WixUILicenseRtf" Value="license.rtf" />
    
  </Product>

  <Fragment>
    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFilesFolder">
        <Directory Id="INSTALLFOLDER" Name="NetAudit Enterprise">
          <Directory Id="NetAuditSystemFolder" Name="NetAudit_System" />
        </Directory>
      </Directory>
      
      <!-- Menu Iniciar -->
      <Directory Id="ProgramMenuFolder">
        <Directory Id="ApplicationProgramsFolder" Name="NetAudit Enterprise"/>
      </Directory>
      
      <!-- Desktop -->
      <Directory Id="DesktopFolder" Name="Desktop"/>
    </Directory>
  </Fragment>

  <Fragment>
    <ComponentGroup Id="ProductComponents" Directory="NetAuditSystemFolder">
      <!-- Aqui seriam adicionados todos os arquivos do NetAudit_System -->
      <!-- Exemplo: -->
      <Component Id="NetAuditExecutable" Guid="*">
        <File Id="NetAuditSystemEXE" 
              Source="dist\NetAudit_System\NetAudit_System.exe" 
              KeyPath="yes" />
      </Component>
      
      <!-- Adicionar mais componentes para cada arquivo/pasta aqui -->
    </ComponentGroup>
    
    <!-- Atalho Menu Iniciar -->
    <DirectoryRef Id="ApplicationProgramsFolder">
      <Component Id="ApplicationShortcut" Guid="*">
        <Shortcut Id="ApplicationStartMenuShortcut"
                  Name="NetAudit Enterprise"
                  Description="Sistema de Auditoria de Rede"
                  Target="[NetAuditSystemFolder]NetAudit_System.exe"
                  WorkingDirectory="NetAuditSystemFolder"/>
        <RemoveFolder Id="CleanUpShortCut" Directory="ApplicationProgramsFolder" On="uninstall"/>
        <RegistryValue Root="HKCU" Key="Software\FUNESA\NetAudit" Name="installed" Type="integer" Value="1" KeyPath="yes"/>
      </Component>
    </DirectoryRef>
    
    <!-- Atalho Desktop -->
    <DirectoryRef Id="DesktopFolder">
      <Component Id="ApplicationShortcutDesktop" Guid="*">
        <Shortcut Id="ApplicationDesktopShortcut"
                  Name="NetAudit Enterprise"
                  Description="Sistema de Auditoria de Rede"
                  Target="[NetAuditSystemFolder]NetAudit_System.exe"
                  WorkingDirectory="NetAuditSystemFolder"/>
        <RegistryValue Root="HKCU" Key="Software\FUNESA\NetAudit" Name="desktop" Type="integer" Value="1" KeyPath="yes"/>
      </Component>
    </DirectoryRef>
  </Fragment>
</Wix>
